@using System.Configuration
@using Gason.Landing.Services
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GasOn Admin - @ViewBag.Title</title>
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/dropzonescss")
    @RenderSection("styles", required: false)
</head>
<body>
    <nav class="navbar navbar-inverse navbar-static-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Налаштування</a>
            </div>
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("На Головну", "Index", "Home")</li>
            </ul>
        </div>

    </nav>

    <div class="container">
        <div class="row">
            <div class="col-sm-2">
                <ul class="nav nav-pills nav-stacked">
                    <li role="presentation" class="@Html.ActiveClass("Admin", "Contacts")">@Html.ActionLink("Контакти", "Contacts", "Admin")</li>
                    <li role="presentation" class="@Html.ActiveClass("Admin", "Gallery")">@Html.ActionLink("Галерея", "Gallery", "Admin")</li>
                </ul>
            </div>
            <div class="col-sm-10">
                @RenderBody()
            </div>
        </div>

    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
